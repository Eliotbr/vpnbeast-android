<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.b.android.openvpn60.activity.MemberActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:layout_alignParentTop="true"
        android:src="@drawable/pp1"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/grdLayout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dip"
        android:layout_marginLeft="40dip"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtFirstName"
            android:text="First Name: "
            android:layout_column="0"
            android:layout_row="0"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtFirstName"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="20dip"
            android:inputType="text"
            />



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtLastName"
            android:text="Last Name: "
            android:layout_column="0"
            android:layout_row="1"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtLastName"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="20dip"
            android:inputType="text"
            />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtEmail"
            android:text="Email: "
            android:layout_column="0"
            android:layout_row="2"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtEmail2"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:layout_marginLeft="20dip"
            android:inputType="textEmailAddress"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/grdLayoutS"
        android:layout_marginRight="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/grdLayout"
        >

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btnSubmit3"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:text="@string/text_submit"
            android:background="#fd383434"
            android:textColor="#368e13"
            />



    </GridLayout>

    <ProgressBar
        android:id="@+id/progressBarMember"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/grdLayoutS"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|bottom"
        android:visibility="gone" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:background="@color/colorBackground"
    android:layout_alignParentBottom="true"
    tools:context="com.b.android.openvpn60.activity.StatusActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/grdLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="80dip"

        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtName"
            android:text="Logged in as: "
            android:layout_column="0"
            android:layout_row="0"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtUser"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal"
            android:textColor="@color/colorAccent"
            android:editable="false"
            android:focusable="false"
            />



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtProfile"
            android:text="Profile name: "
            android:layout_column="0"
            android:layout_row="1"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtProfile"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/colorAccent"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtIp"
            android:text="Your IP address: "
            android:layout_column="0"
            android:layout_row="2"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtIp"
            android:textSize="15sp"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_row="2"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtPort"
            android:text="Your Port number: "
            android:layout_column="0"
            android:layout_row="3"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtPort"
            android:textSize="15sp"
            android:layout_column="1"
            android:textColor="@color/colorAccent"
            android:layout_row="3"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtStatus"
            android:text="Status: "
            android:layout_column="0"
            android:layout_row="4"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtStatus"
            android:textSize="15sp"
            android:textColor="@color/colorAccent"
            android:layout_column="1"
            android:layout_row="4"
            android:text="@string/state_connecting_msg"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtBytesIn"
            android:text="Bytes In "
            android:layout_column="0"
            android:layout_row="5"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtBytesIn"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="5"
            android:textColor="@color/colorAccent"
            android:text="Null"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtBytesOut"
            android:text="Bytes out"
            android:layout_column="0"
            android:layout_row="6"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtBytesOut"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_gravity="fill_horizontal"
            android:editable="false"
            android:focusable="false"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/txtDuration"
            android:text="Duration "
            android:layout_column="0"
            android:layout_row="7"
            android:textStyle="bold"
            />

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/edtDuration"
            android:textSize="15sp"
            android:layout_column="1"
            android:layout_row="7"
            android:layout_gravity="fill_horizontal"
            android:textColor="@color/colorAccent"
            android:editable="false"
            android:focusable="false"
            />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:id="@+id/grdLayoutS"
        android:layout_marginRight="40dip"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="40dip"
        android:layout_marginBottom="20dip"

        android:layout_below="@+id/grdLayout"
        >


        <Button
            android:id="@+id/btnDisconnect"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:layout_gravity="fill_horizontal"
            android:layout_marginRight="10dip"
            
            android:layout_row="1"
            android:background="@drawable/button_selector_grey"
            android:text="@string/state_waiting"
            android:textColor="#232323" />

    </GridLayout>

</RelativeLayout>